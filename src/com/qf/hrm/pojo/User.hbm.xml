<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

        <!-- 配置hibernate -->
 <hibernate-mapping package="com.qf.hrm.pojo">
 	<class name="User" table="t_user" lazy="false">
 		<id name="id">
 			<generator class="native"></generator>
 		</id>
 		<!-- 配置普通属性 -->
 		<property name="loginName"></property>
 		<property name="uPassword"></property>
 		<property name="uStatus"></property>
 		<property name="createdate"></property>
 		<property name="userName"></property>
 		<property name="flag"></property>
 	</class>
 </hibernate-mapping>